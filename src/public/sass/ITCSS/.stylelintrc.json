{
  "extends": "../../../../.stylelintrc",
  "rules": {
    "rem-over-px/rem-over-px": [
      true,
      { "ignore": ["1px", "-1px"], "ignoreFunctions": ["url"], "fontSize": 16 }
    ],
    "itcss/no-at-important": [
      true,
      {
        "ignoreLayers": ["07_utilities"]
      }
    ],
    "itcss/no-variable-declaration": [
      true,
      {
        "ignoreLayers": ["01_settings", "03_generic"]
      }
    ],
    "itcss/no-mixin-declaration": [
      true,
      {
        "ignoreLayers": ["02_tools"]
      }
    ]
  }
}
